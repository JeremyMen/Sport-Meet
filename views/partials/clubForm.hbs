<div class="row">
  <div class="col-md-12 login-from-row">
    <label>Add a club:</label>
    <select name="club" class="mw-100">
      {{#if clubRequest}}  
        <option style="color: #007C9B" selected="true" name="{{clubRequest.name}}" value="{{clubRequest.id}}" id="{{clubRequest.id}}">{{clubRequest.name}}</option>
      {{/if}} 
      {{#each clubs as |club|}}
        <option name="{{club.name}}" value="{{club.id}}" id="{{club.id}}">{{club.name}}</option>
      {{/each}}
    </select>
  </div>
</div>