<div class="container">
  {{>navbar}}
  <div class="row text-center login-page">
		<div class="col-md-12 login-form">
			<form action="/players/{{user.username}}/request/new/{{sportRequest.name}}" method="POST">
        {{>titleForm}}
        <h5>User: {{user.name}}</h5>
        <h5>Sport: {{sportName}}</h5>
        <h5>Club: {{clubRequest.name}}</h5>
        <h5>Opening Time: {{startDateRequest}}</h5>
        <h5>Closing Time: {{endDateRequest}}</h5>
				<div class="row">
					<div class="col-md-12 login-from-row">
						<button class="btn btn-info">Send</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>