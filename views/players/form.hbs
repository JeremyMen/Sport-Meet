


<div class="text-center mb-4">
{{#if user.isNew}}
  <h3 class="h3 mb-3 font-weight-normal">New Player</h3>
  <form action="/players" method="POST">
{{else}}
  <h3 class="h3 mb-3 font-weight-normal">Edit your profile</h3>
  <form action="/players/{{user.id}}/edit" method="POST">
{{/if}}
</div>

  <div class="form-group">
    <input type="text" class="form-control {{#if error.name }}is-invalid{{/if}}" id="name" name="name" placeholder="Name" value="{{ user.name }}">
  {{#if error.name}}
    <div class="invalid-feedback">
      {{error.name.message}}
    </div>
  {{/if}}
  </div>

  <div class="form-group">
    <input type="text" class="form-control {{#if error.surname }}is-invalid{{/if}}" id="surname" name="surname" placeholder="Surname" value="{{ user.surname }}">
  {{#if error.surname}}
    <div class="invalid-feedback">
      {{error.surname.message}}
    </div>
  {{/if}}
  </div>

  <div class="form-group">
    <input type="text" class="form-control {{#if error.username }}is-invalid{{/if}}" id="username" name="username" placeholder="Username" value="{{ user.username }}">
  {{#if error.username}}
    <div class="invalid-feedback">
      {{error.username.message}}
    </div>
    {{/if}}
  </div>

  <div class="form-group">
    <input type="email" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email" name="email" placeholder="Email" value="{{ user.email }}">
  {{#if error.email}}
    <div class="invalid-feedback">
      {{error.email.message}}
    </div>
    {{/if}}
  </div>

  <div class="form-group">
    <input type="password" class="form-control {{#if error.password }}is-invalid{{/if}}" id="password" name="password" placeholder="Password">
  {{#if error.password}}
    <div class="invalid-feedback">
      {{error.password.message}}
    </div>
    {{/if}}
  </div>

  <div class="form-group">
    <input type="text" class="form-control" id="photo" name="photo" placeholder="photo">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>