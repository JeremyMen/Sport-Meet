<div class="container">
  <div class="row text-center login-page">
	   <div class="col-md-12 login-form">
	      <form action="/players" method="POST">

	        <div class="row">
		        <div class="col-md-12 login-form-header">
		          <p class="login-form-font-header">New<span>Player</span><p>
		        </div>
		      </div>

          {{>nameForm}}
          {{>surnameForm}}
          {{>usernameForm}}
          {{>emailForm}}
          {{>passwordForm}}

          <div class="row">
            <div class="col-md-12 login-from-row">
              <input type="text" class="form-control" id="photo" name="photo" placeholder="photo">
            </div>
          </div>

          <div class="col-md-12 login-from-row">
            <button class="btn btn-info">Sing up</button>
          </div>

          <div class="row">
		        <div class="col-md-12 login-from-row">
              <p>Already have an account?</p>
              <p>
                <a href="/login"><b>Sing in</b></a>
              </p>
		        </div>
		      </div>

	      </form>
	    </div>
    </div>
    {{>footer}}
</div>