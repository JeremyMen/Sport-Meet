<form action="/login" method="POST">

  <div class="form-group">
    <label for="email">Email address</label>
    <input name="email" type="email" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email" placeholder="Enter email"
      value="{{ user.email }}">
    {{#if error.email}}
    <div class="invalid-feedback">
      {{error.email}}
    </div>
    {{/if}}
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}" id="password" placeholder="Password"
      value="{{ user.password }}">
    {{#if error.password}}
      <div class="invalid-feedback">
        {{error.password}}
      </div>
    {{/if}}
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>